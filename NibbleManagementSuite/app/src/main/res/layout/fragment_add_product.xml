<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a product."
        android:layout_above="@+id/add_product_grid"
        android:layout_centerHorizontal="true"/>

    <GridLayout
        android:id="@+id/add_product_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
        android:text="Name:"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="1"/>

        <EditText
            android:id="@+id/new_product_name"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnSpan="2"/>

        <TextView
            android:text="Description:"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnSpan="1"/>

        <EditText
            android:id="@+id/new_product_description"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnSpan="2"/>

        <TextView
            android:text="Ingredients:"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnSpan="1"/>

        <EditText
            android:id="@+id/new_product_ingredients"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnSpan="2"/>

        <TextView
            android:text="Price:"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnSpan="1"/>

        <EditText
            android:id="@+id/new_product_price"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnSpan="2"/>
    </GridLayout>
</RelativeLayout>